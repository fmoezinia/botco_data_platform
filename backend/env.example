# Botco Data Platform Configuration

# Application Settings
APP_NAME="Botco Data Platform"
APP_VERSION="1.0.0"
DEBUG=false

# Server Configuration
HOST=0.0.0.0
PORT=8000

# CORS Settings
CORS_ORIGINS=["http://localhost:3000", "http://127.0.0.1:3000"]

# Data Directory Configuration
DATA_DIR=data
VIDEOS_DIR=data/videos
VISUALIZATIONS_DIR=data/visualizations

# SAM2 AI Configuration
SAM2_MODEL_NAME=facebook/sam2-hiera-tiny
SAM2_DEVICE=auto

# Task Management
TASK_TIMEOUT=20.0
MAX_WORKERS=4

# AWS S3 Configuration (Optional)
STORAGE_MODE=local
AWS_ACCESS_KEY_ID=your_access_key_here
AWS_SECRET_ACCESS_KEY=your_secret_key_here
AWS_REGION=us-east-1
S3_BUCKET_NAME=your_bucket_name_here
S3_VIDEOS_PREFIX=videos/
S3_VISUALIZATIONS_PREFIX=visualizations/

# Database Configuration (Optional)
# DATABASE_URL=sqlite:///./botco_data.db
# DATABASE_URL=postgresql://user:password@localhost/botco_data

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
